{
  "ecmaFeatures": {
    "modules": true,
    "experimentalObjectRestSpread": true
  },

  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },

  "plugins": [
    "standard"
  ],

  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  },

  "rules": {
    "accessor-pairs": 2,
    "arrow-spacing": [2, { "before": true, "after": true }],
    "block-spacing": [2, "always"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "comma-dangle": [2, "neve